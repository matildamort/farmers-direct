





  <% @cart.order_items.each do |order_item| %> <p>Item: <%= order_item.product.name %>/ Price: <%= number_to_currency(order_item.product.price) %> / Quantity: <%= order_item.quantity %> / Total Price: <%= number_to_currency(order_item.total_price) %>

    </p>
  
   
        <%= link_to "Add one", order_item_add_path(:id => order_item), method: :post %>
