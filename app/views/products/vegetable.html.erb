      <header class="masthead text-center text-white">
            <div class="masthead-content">
                <div class="container px-2">
                    <h1 class="masthead-heading mb-0">Veggies</h1>
                </div>
            </div>

             <!-- Header-->
        </header>

<%= render'shared/product_nav' %>


  <section class="row card-row-cols-1 row-cols-md-3">
        <% @veggies.each do |product| %>
       
             <div class="container px-4 px-lg-5 mt-5">
                <div class="justify-content-center">
                    <div class="col-mb-4">
                        <div class="card h-100">
                            <!-- Product image-->
                            <%= image_tag product.productpic.representation(resize_to_limit: [190, 160]).processed, :crop => :fill if product.productpic.attached? %>
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder"><%=product.name%></h5>
                                    <!-- Product price-->
                                   <p>$<%=product.price %></p>
                                </div>
                            </div>
                            <!-- Product actions-->
                            <% if user_signed_in? and !current_user.id==!product.user_id %>
                            <div class="text-center"><%= button_to "Add to cart", line_items_path(:product_id => product.id), :class => "btn btn-outline-dark mt-auto" %>
                            <%end%>


                                    <% if user_signed_in? and (current_user.admin? or current_user.id==product.user_id) %>
                                        <p><%= link_to "Edit", edit_product_path(product) %> |
                                        <%= link_to "Delete", product_path(product), method: :delete, data: {confirm: "Are you sure?"} %></p>
                                    <% end %>
                
                                    </div>
                            </div>
                        </div>
                    </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
            <% end %>
        </section>
    
