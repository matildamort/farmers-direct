       
  
     <div>
       <h1> <%= link_to "Add Product", new_product_path %></h1>
        </div>

          <div>
       <h1> <%= link_to "Create Farmers Page", farmers_new_path %></h1>
        </div>

   <!-- Header-->
        <header class="bg-dark py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">Buy local</h1>
                    <p class="lead fw-normal text-white-50 mb-0">Browse out list of local products below</p>
                </div>
            </div>
        </header>
        <!-- Section-->
<div>
        
   <section class="py-5">
            

        <% @products.each do |product| %>
       
             <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <img class="card-img-top"  <%= image_tag product.productpic.representation(resize_to_limit: [190, 160]).processed, :crop => :fill if product.productpic.attached? %>
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder"><%=link_to product.name, product_path(product.id) %></h5>
                                    <!-- Product price-->
                                   <p>$<%=product.price %></p>
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><%= button_to "Add #{product.name} to cart", line_items_path(:product_id => product.id), :class => "btn btn-outline-dark mt-auto" %></div>
                                    <p><%= link_to "Edit", edit_product_path(product) %> |
                                    <%= link_to "Delete", product_path(product), method: :delete, data: {confirm: "Are you sure?"} %>
                            </div>
                        </div>
                    </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
         <% end %>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
    </body>
</html>
